{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "$ref": "./defs.schema.json#/itemType"
    },
    "name": {
      "type": "string"
    },
    "folder": {
      "type": [
        "string",
        "null"
      ]
    },
    "_id": {
      "type": "string"
    },
    "img": {
      "type": "string"
    },
    "effects": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "flags": {
      "type": "object",
      "additionalProperties": true
    },
    "_stats": {
      "type": "object",
      "additionalProperties": true
    },
    "ownership": {
      "type": "object",
      "additionalProperties": {
        "type": "integer"
      }
    },
    "sort": {
      "type": "number"
    },
    "_key": {
      "type": "string"
    },
    "system": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "slug": {
          "$ref": "./slugs.schema.json#/slug"
        },
        "size": {
          "type": "number"
        },
        "speed": {
          "type": "object",
          "properties": {
            "twoLegs": {
              "type": "number"
            },
            "fourLegs": {
              "type": "number"
            },
            "sixLegs": {
              "type": "number"
            }
          },
          "required": [
            "twoLegs"
          ]
        },
        "birthrights": {
          "type": "array",
          "items": {
            "$ref": "./slugs.schema.json#/slug"
          }
        },
        "conditionedBirthrights": {
          "type": "array",
          "items": {
            "$ref": "./slugs.schema.json#/slug"
          }
        },
        "perks": {
          "type": "array",
          "items": {
            "$ref": "./slugs.schema.json#/slug"
          }
        },
        "capabilities": {
          "$ref": "./defs.schema.json#/capabilities"
        },
        "maneuvers": {
          "type": "array",
          "items": {
            "$ref": "./slugs.schema.json#/slug"
          }
        },
        "powerSkills": {
          "$ref": "./defs.schema.json#/powerSkills"
        }
      },
      "required": [
        "slug",
        "description",
        "size",
        "speed",
        "birthrights",
        "perks",
        "conditionedBirthrights",
        "capabilities",
        "powerSkills",
        "maneuvers"
      ],
      "additionalProperties": true
    }
  },
  "required": [
    "type",
    "name",
    "_id",
    "system"
  ],
  "additionalProperties": true
}