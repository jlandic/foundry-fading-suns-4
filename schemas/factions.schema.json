{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "$ref": "./defs.schema.json#/itemType"
    },
    "name": {
      "type": "string"
    },
    "folder": {
      "type": [
        "string",
        "null"
      ]
    },
    "_id": {
      "type": "string"
    },
    "img": {
      "type": "string"
    },
    "effects": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "flags": {
      "type": "object",
      "additionalProperties": true
    },
    "_stats": {
      "type": "object",
      "additionalProperties": true
    },
    "ownership": {
      "type": "object",
      "additionalProperties": {
        "type": "integer"
      }
    },
    "sort": {
      "type": "number"
    },
    "_key": {
      "type": "string"
    },
    "system": {
      "type": "object",
      "properties": {
        "characteristics": {
          "$ref": "./defs.schema.json#/characteristics"
        },
        "skills": {
          "$ref": "./defs.schema.json#/skills"
        },
        "description": {
          "type": "string"
        },
        "slug": {
          "$ref": "./slugs.schema.json#/slug"
        },
        "perk": {
          "$ref": "./slugs.schema.json#/slug"
        },
        "curse": {
          "$ref": "./slugs.schema.json#/slug"
        },
        "blessing": {
          "type": "array",
          "items": {
            "$ref": "./slugs.schema.json#/slug"
          }
        },
        "favoredCalling": {
          "$ref": "./slugs.schema.json#/slug"
        },
        "equipment": {
          "$ref": "./slugs.schema.json#/slug"
        }
      },
      "required": [
        "slug",
        "description",
        "perk",
        "curse",
        "blessing",
        "characteristics",
        "skills",
        "equipment"
      ],
      "additionalProperties": true
    }
  },
  "required": [
    "type",
    "name",
    "_id",
    "system"
  ],
  "additionalProperties": true
}