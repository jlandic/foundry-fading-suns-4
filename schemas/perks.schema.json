{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "$ref": "./defs.schema.json#/itemType"
    },
    "name": {
      "type": "string"
    },
    "folder": {
      "type": [
        "string",
        "null"
      ]
    },
    "_id": {
      "type": "string"
    },
    "img": {
      "type": "string"
    },
    "effects": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "flags": {
      "type": "object",
      "additionalProperties": true
    },
    "_stats": {
      "type": "object",
      "additionalProperties": true
    },
    "ownership": {
      "type": "object",
      "additionalProperties": {
        "type": "integer"
      }
    },
    "sort": {
      "type": "number"
    },
    "_key": {
      "type": "string"
    },
    "system": {
      "type": "object",
      "properties": {
        "sourceType": {
          "type": "string",
          "enum": [
            "class",
            "calling",
            "species"
          ]
        },
        "type": {
          "type": "string",
          "enum": [
            "ability",
            "austerity",
            "birthright",
            "cyberdevice",
            "power",
            "privilege",
            "verve"
          ]
        },
        "preconditions": {
          "$ref": "./defs.schema.json#/preconditions"
        },
        "description": {
          "type": "string"
        },
        "benefice": {
          "type": "string"
        },
        "slug": {
          "$ref": "./slugs.schema.json#/slug"
        }
      },
      "required": [
        "sourceType",
        "type",
        "slug",
        "description",
        "preconditions"
      ],
      "additionalProperties": true
    }
  },
  "required": [
    "type",
    "name",
    "_id",
    "system"
  ],
  "additionalProperties": true
}
