{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "$ref": "./defs.schema.json#/itemType"
    },
    "name": {
      "type": "string"
    },
    "folder": {
      "type": [
        "string",
        "null"
      ]
    },
    "_id": {
      "type": "string"
    },
    "img": {
      "type": "string"
    },
    "effects": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "flags": {
      "type": "object",
      "additionalProperties": true
    },
    "_stats": {
      "type": "object",
      "additionalProperties": true
    },
    "ownership": {
      "type": "object",
      "additionalProperties": {
        "type": "integer"
      }
    },
    "sort": {
      "type": "number"
    },
    "_key": {
      "type": "string"
    },
    "system": {
      "type": "object",
      "properties": {
        "characteristics": {
          "$ref": "./defs.schema.json#/characteristics"
        },
        "skills": {
          "$ref": "./defs.schema.json#/skills"
        },
        "description": {
          "type": "string"
        },
        "slug": {
          "$ref": "./slugs.schema.json#/slug"
        },
        "perk": {
          "$ref": "./slugs.schema.json#/slug"
        },
        "capabilities": {
          "$ref": "./defs.schema.json#/capabilities"
        },
        "perks": {
          "type": "array",
          "items": {
            "$ref": "./slugs.schema.json#/slug"
          }
        },
        "factions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "al_malik",
              "brother_battle_faction",
              "charioteers",
              "decados",
              "engineers",
              "eskatonic_order",
              "far",
              "hawkwood",
              "hazat",
              "li_halan",
              "sanctuary_aeon",
              "scravers",
              "society_st_paulus",
              "temple_avesti",
              "the_dispossessed",
              "the_muster",
              "the_reeves",
              "urth_orthodox",
              "vagabonds",
              "vuldrok_barbarians",
              "drenjar",
              "lakol",
              "maghtaw",
              "rekgold",
              "skey",
              "zetol"
            ]
          }
        }
      },
      "required": [
        "slug",
        "description",
        "perk",
        "perks",
        "skills",
        "capabilities",
        "factions"
      ],
      "additionalProperties": true
    }
  },
  "required": [
    "type",
    "name",
    "_id",
    "system"
  ],
  "additionalProperties": true
}
