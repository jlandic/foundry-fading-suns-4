<section
    class="scrollable tab {{tabs.maneuvers.cssClass}}"
    data-group="{{tabs.maneuvers.group}}"
    data-tab="{{tabs.maneuvers.id}}"
>
    {{#each maneuverTypes}}
    <ul class="item-list">
        <li class="item-list-header flexrow">
            <h3>{{ this.label }}</h3>
        </li>
    </ul>

    <ul class="item-list">
        {{#each (getProperty ../maneuvers this.type) }}
            {{> "fading-suns-4.inline-item" item=this}}
        {{/each}}
    </ul>
    {{/each}}

    <ul class="item-list">
        <li class="item-list-header flexrow">
            <h3>{{ localize "fs4.actor.fields.powers" }}</h3>

            {{#each powerColumnLabels}}
                <div class="item-column">{{this}}</div>
            {{/each}}

            <div></div>
        </li>
    </ul>

    <ul class="item-list">
        {{#each powers}}
            {{> "fading-suns-4.inline-item" item=this}}
        {{/each}}
    </ul>
</section>
