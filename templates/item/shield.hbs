<section class="tab scrollable {{tabs.main.cssClass}}" data-group="{{tabs.main.group}}" data-tab="{{tabs.main.id}}">
    {{> "fading-suns-4.equipment-base"}}

    <div class="flexrow stats-row">
        <div class="flexcol flex2">
            <label for="system.capability">{{ localize "fs4.armor.fields.capability" }}</label>
            {{> "fading-suns-4.reference" reference=capability isEditable=isEditable }}
        </div>

        <div class="flexcol">
            <label for="system.res">{{ localize "fs4.shield.fields.res" }}</label>
            <input type="number" name="system.res" value="{{system.res}}">
        </div>

        <div class="flexcol">
            <label for="system.strRequirement">{{ localize "fs4.shield.fields.strRequirement" }}</label>
            <input type="number" name="system.strRequirement" value="{{system.strRequirement}}">
        </div>

        <div class="flexcol">
            <label for="system.damage">{{ localize "fs4.shield.fields.damage" }}</label>
            <input type="number" name="system.damage" value="{{system.damage}}">
        </div>
    </div>

    <hr>

    <div class="flexrow">
        {{#each damageTypeOptions}}
        <span class="damage-type {{#if this.checked}}active{{else}}inactive{{/if}}" data-type="{{this.type}}"
            data-action="toggleDamageType" title="{{this.title}}">
            {{this.label}}
        </span>
        {{/each}}
    </div>

    <hr>

    <section>
        <ul class="item-list">
            <li class="item-list-header flexrow">
                <h3>{{ localize "fs4.shield.fields.features" }}</h3>
            </li>
        </ul>

        <ul class="item-list">
            {{#each features}}
            {{> "fading-suns-4.inline-item" item=this}}
            {{/each}}
        </ul>
    </section>

    <h2>{{ localize "fs4.commonFields.description" }}</h2>
    {{> "fading-suns-4.editor" name="system.description" value=description}}
</section>
