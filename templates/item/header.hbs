<header class="sheet-header">
    <aside class="img">
        <img
            src="{{item.img}}"
            class="document-img item-img"
            data-action="showImage"
            data-src="{{document.img}}"
            data-id="{{document.id}}"
            data-name="{{document.name}}"
            data-edit="img"
        />
        {{#if isEditable}}
            <a class="edit-image" data-action="editImage">
                <i class="fa-solid fa-image fa-fw"></i>
            </a>
        {{/if}}
    </aside>

    <div class="header-identity">
        <h1 class="item-name">
            {{#if isEditable}}
                <input type="text" name="name" value="{{item.name}}" />
            {{else}}
                {{item.name}}
            {{/if}}
        </h1>
    </div>
</header>
