<section class="scrollable tab {{tabs.main.cssClass}}" data-group="{{tabs.main.group}}" data-tab="{{tabs.main.id}}">
    <section>
        <h2>{{ localize "fs4.commonFields.description" }}</h2>
        {{{description}}}
    </section>

    {{> "fading-suns-4.choices-set" choices=characteristics titleKey="fs4.class.fields.characteristics" }}

    {{> "fading-suns-4.choices-set" choices=skills titleKey="fs4.class.fields.skills" }}

    {{> "fading-suns-4.choices-set" choices=capabilities titleKey="fs4.calling.fields.capabilities" }}

    <section>
        <h2>{{ localize "fs4.class.fields.perks" }}</h2>
        <div>
            {{{perk}}} {{ localize "fs4.sheets.class.andOnePerkFromListOrOpen" }}
        </div>

        <h3>{{ localize "fs4.sheets.class.classPerks" }}</h3>
        <ul>
            {{#each perks}}
                <li>{{{this}}}</li>
            {{/each}}
        </ul>
    </section>

    <section>
        <h2>{{ localize "fs4.class.fields.factions" }}</h2>

        <ul>
            {{#each factions}}
                <li>{{{this}}}</li>
            {{/each}}
        </ul>
    </section>
</section>
