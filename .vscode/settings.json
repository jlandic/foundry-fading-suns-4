{
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultColorDecorators": "never",
    "editor.detectIndentation": false
  },
  "json.schemas": [
    {
      "fileMatch": [
        "source/items/classes/*.json"
      ],
      "url": "./schemas/classes.schema.json"
    },
    {
      "fileMatch": [
        "source/items/afflictions/*.json"
      ],
      "url": "./schemas/afflictions.schema.json"
    },
    {
      "fileMatch": [
        "source/items/callings/*.json"
      ],
      "url": "./schemas/callings.schema.json"
    },
    {
      "fileMatch": [
        "source/items/classes/*.json"
      ],
      "url": "./schemas/classes.schema.json"
    },
    {
      "fileMatch": [
        "source/items/factions/*.json"
      ],
      "url": "./schemas/factions.schema.json"
    },
    {
      "fileMatch": [
        "source/items/perks/*.json"
      ],
      "url": "./schemas/perks.schema.json"
    },
    {
      "fileMatch": [
        "source/items/species/*.json"
      ],
      "url": "./schemas/species.schema.json"
    }
  ],
  "typescript.validate.enable": false
}
